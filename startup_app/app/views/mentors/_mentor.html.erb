<% obj.each do |mentor| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <div class= "card-title h5">
        <%= mentor.user.fname.upcase%> <%=mentor.user.lname.upcase %>
      </div>
      <p><%#= mentor.description, class: "card-text" %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= mentor.user.email %></li>
      <li class="list-group-item"><%= mentor.user.phone %></li>
      <li class="list-group-item"><%= mentor.user.dob %></li>
    </ul>

<% obj.each do |user| %>
  <div class="card mb-3" style="max-width: 700px;">
  <div class="row no-gutters ">
    <div class="col-md-5">
			<%= link_to gravatar_for(user,size: 245),user_path(user) %>
    </div>
    <div class="col-md-5 offset-1">
      <div class="card-body my-auto align-items-center">
				<h1 class="card-title center justify-content-center" ><%= user.fname %></h1>
				<div>
        <p class="card-text  center justify-content-center"><small class = "text-muted">Contact <%= user.fname %>:</small>
				<small class = "text-muted"><%= user.email %></small></p>
        </div> 
        <div>
                <p class = "card-text  center justify-content-center">Phone No:</p>
                <small class = "text-muted"><%= user.phone %></small></p>
        </div> 

                <small class = "text-muted"><%= user.dob %></small></p>
              

                <p class = "card-text center"><small class = "text-muted"> User has <%= pluralize(user.articles.count,"article") %></small></p>
      </div>
    </div>
  </div>
</div>
<% end %>
<% if @member.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>The following errors were encountered :</p>
    <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @member do |f| %>
  
  <div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label :"Ex Startup Name", for: "exstname"%>
    <%= f.text_field :ex_startup_name, class: "form-control", id: "exstname", placeholder: "Connect to Start" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :"Ex Startup Field/Desc/Info", for: "exstfield"%>
    <%= f.text_field :ex_startup_field, class: "form-control", id: "exstfield", placeholder: "Web Application for Ex-startup Members to connect and innovate" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :"Startup experience(in ye", for: "experience"%>
    <%= f.number_field :experience, class: "form-control", id: "experience", placeholder: "2" %>
  </div>
</div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        Check me out
      </label>
    </div>
  </div>
  <%= f.submit "Sign up", class: "btn btn-primary" %>
<% end %>
